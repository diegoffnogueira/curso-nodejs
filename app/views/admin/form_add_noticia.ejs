<!DOCTYPE html>
<html lang="pt-br">

<head>
	<meta charset="utf-8" />
	<title>Formulário de cadastro de Notícia Globo</title>
</head>

<body>

	<h1>Adicionar notícia G1</h1>

	<% if (validacao) { %>
		<ul>
			<% for (let index = 0; index < validacao.length; index++) { %>
				<li>
					<%= validacao[index].msg %>
				</li>
			<% } %>
		</ul>
	<% } %>

	<form action="/noticias/salvar" method="POST">
		<table>
			<tr>
				<td>
					<label>Título:</label>
				</td>
				<td>
					<input type="text" size="30" id="titulo" name="titulo" placeholder="Título da notícia">
				</td>
			</tr>
			<tr>
				<td>
					<label>Resumo:</label>
				</td>
				<td>
					<input type="text" size="30" id="resumo" name="resumo" placeholder="Resumo da notícia">
				</td>
			</tr>
			<tr>
				<td>
					<label>Nome autor:</label>
				</td>
				<td>
					<input type="text" size="30" id="autor" name="autor" placeholder="Autor da notícia">
				</td>
			</tr>
			<tr>
				<td>
					<label>Data dos fatos:</label>
				</td>
				<td>
					<input type="date" size="30" id="data_noticia" name="data_noticia" placeholder="Título da notícia">
				</td>
			</tr>
			<tr>
				<td valign="top">
					<label>Notícia:</label>
				</td>
				<td>
					<textarea id="noticia" name="noticia" rows="5" cols="30"></textarea>
				</td>
			</tr>
			<tr>
				<td colspan="2" align="center">
					<input type="submit" value="ENVIAR" />
				</td>
			</tr>
		</table>
	</form>

</body>

</html>